<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141c3b">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <!-- App Icon with Grey Circle -->
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="#74758d"
            android:src="@android:color/transparent" />

        <!-- App Name: Teach Tease -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teach Tease"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- App Name: QuizBot -->
        <TextView
            android:id="@+id/app_name2"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="0dp"
            android:text="QuizBot"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"> <!-- Gap between QuizBot and buttons -->

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#74758d"
                android:text="Start" />

            <Button
                android:id="@+id/buttonSetting"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#74758d"
                android:text="Setting" />

            <Button
                android:id="@+id/buttonQuit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#74758d"
                android:text="Quit" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
